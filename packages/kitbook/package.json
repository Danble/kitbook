{
  "name": "kitbook",
  "version": "0.0.24",
  "description": "Svelte Component Documentation and Prototyping Workbench built using SvelteKit",
  "type": "module",
  "svelte": "src/lib/index.ts",
  "main": "src/lib/index.ts",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && node update-packaged-index-path.js",
    "check": "svelte-check --tsconfig ./tsconfig.json --threshold warning --diagnostic-sources js,svelte",
    "check:watch": "svelte-check --tsconfig ./jsconfig.json --threshold warning --diagnostic-sources js,svelte --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "vitest -u"
  },
  "dependencies": {
    "magic-string": "^0.26.2",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.5.0",
    "prism-svelte": "^0.5.0",
    "prismjs": "^1.29.0",
    "svelte-pieces": "^1.0.44",
    "unist-util-visit": "^4.1.1"
  },
  "devDependencies": {
    "@iconify/json": "^2.1.121",
    "@sveltejs/adapter-auto": "1.0.0-next.66",
    "@sveltejs/kit": "1.0.0-next.442",
    "@sveltejs/package": "1.0.0-next.1",
    "@unocss/preset-icons": "^0.45.29",
    "mdsvex": "^0.10.6",
    "replace-in-file": "^6.3.5",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.1",
    "svelte-preprocess": "^4.10.7",
    "svelte2tsx": "^0.5.14",
    "temp-s-p-u": "^0.0.5",
    "tslib": "^2.4.0",
    "typescript": "~4.8.4",
    "unocss": "^0.45.29",
    "vite": "^3.0.9",
    "vitest": "^0.24.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacob-8/kitbook.git"
  },
  "keywords": [
    "Kitbook",
    "Svelte",
    "SvelteKit",
    "Typescript",
    "UI",
    "Component library",
    "Documentation",
    "Prototyping",
    "Workbench",
    "Stories"
  ],
  "author": "Jacob Bowdoin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jacob-8/kitbook/issues"
  },
  "homepage": "https://github.com/jacob-8/kitbook/tree/main/packages/kitbook"
}
{
  "name": "kitbook",
  "version": "0.0.25",
  "description": "Svelte Component Documentation and Prototyping Workbench built using SvelteKit",
  "type": "module",
  "svelte": "src/lib/index.ts",
  "main": "src/lib/index.ts",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "kitbook": "vite dev --config kitbook.vite.config.js",
    "kitbook:build": "vite build --config kitbook.vite.config.js",
    "kitbook:preview": "vite preview --config kitbook.vite.config.js",
    "package": "svelte-kit sync && svelte-package && node update-packaged-index-path.js",
    "check": "svelte-check --tsconfig ./tsconfig.json --threshold warning --diagnostic-sources js,svelte",
    "check:watch": "svelte-check --tsconfig ./jsconfig.json --threshold warning --diagnostic-sources js,svelte --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "vitest",
    "test:update": "vitest -u"
  },
  "dependencies": {
    "lz-string": "^1.4.4",
    "magic-string": "^0.26.7",
    "prettier": "^2.8.1",
    "prettier-plugin-svelte": "^2.8.1",
    "prism-svelte": "^0.5.0",
    "prismjs": "^1.29.0",
    "svelte": "^3.54.0",
    "svelte-pieces": "^1.0.44",
    "unist-util-visit": "^4.1.1"
  },
  "devDependencies": {
    "@iconify/json": "^2.1.150",
    "@sveltejs/adapter-auto": "1.0.0-next.90",
    "@sveltejs/kit": "1.0.0-next.577",
    "@sveltejs/package": "1.0.0-next.6",
    "@unocss/preset-icons": "^0.47.5",
    "cac": "^6.7.14",
    "kleur": "^4.1.5",
    "mdsvex": "^0.10.6",
    "replace-in-file": "^6.3.5",
    "svelte-check": "^2.10.2",
    "svelte-preprocess": "^4.10.7",
    "svelte2tsx": "^0.5.22",
    "temp-s-p-u": "^0.0.7",
    "tslib": "^2.4.1",
    "typescript": "~4.9.4",
    "unocss": "^0.47.5",
    "vite": "^3.2.5",
    "vitest": "^0.25.6"
  },
  "publishConfig": {
    "directory": "package",
    "linkDirectory": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacob-8/kitbook.git"
  },
  "keywords": [
    "Kitbook",
    "Svelte",
    "SvelteKit",
    "Typescript",
    "UI",
    "Component library",
    "Documentation",
    "Prototyping",
    "Workbench",
    "Stories"
  ],
  "author": "Jacob Bowdoin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jacob-8/kitbook/issues"
  },
  "homepage": "https://github.com/jacob-8/kitbook/tree/main/packages/kitbook"
}
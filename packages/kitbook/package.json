{
  "name": "kitbook",
  "version": "0.0.18",
  "description": "Svelte Component Documentation and Prototyping Workbench built using SvelteKit",
  "type": "module",
  "svelte": "src/lib/index.ts",
  "main": "src/lib/index.ts",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-kit package && node update-packaged-index-path.js",
    "check": "svelte-check --tsconfig ./tsconfig.json --threshold warning --diagnostic-sources js,svelte",
    "check:watch": "svelte-check --tsconfig ./jsconfig.json --threshold warning --diagnostic-sources js,svelte --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "vitest -u"
  },
  "dependencies": {
    "magic-string": "^0.26.2",
    "prism-svelte": "^0.5.0",
    "prismjs": "^1.28.0",
    "svelte-pieces": "^1.0.26",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "1.0.0-next.64",
    "@sveltejs/kit": "1.0.0-next.403",
    "mdsvex": "^0.10.6",
    "replace-in-file": "^6.3.5",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-deep-wind-preprocess": "^0.0.8",
    "svelte-preprocess": "^4.10.7",
    "svelte-windicss-preprocess": "~4.1.0",
    "svelte2tsx": "^0.5.13",
    "tslib": "^2.4.0",
    "typescript": "~4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.21.0",
    "windicss": "^3.5.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacob-8/kitbook.git"
  },
  "keywords": [
    "Kitbook",
    "Svelte",
    "SvelteKit",
    "Typescript",
    "UI",
    "Component library",
    "Documentation",
    "Prototyping",
    "Workbench",
    "Stories"
  ],
  "author": "Jacob Bowdoin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jacob-8/kitbook/issues"
  },
  "homepage": "https://github.com/jacob-8/kitbook/tree/main/packages/kitbook"
}